{
  "name": "revista-cms-api",
  "version": "1.0.0",
  "description": "API RESTful para gerenciamento de revistas e quadrinhos",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:debug": "nodemon --inspect src/index.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest unit --verbose",
    "test:integration": "jest integration --runInBand --verbose",
    "test:e2e": "jest e2e --runInBand --verbose",
    "test:ci": "jest --coverage --ci --runInBand --maxWorkers=2",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "db:init": "psql -U $DB_USER -d $DB_NAME -f database/init.sql",
    "db:seed": "node scripts/seed.js",
    "create-admin": "node scripts/create-admin.js",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true"
  },
  "keywords": [
    "api",
    "rest",
    "nodejs",
    "express",
    "postgresql",
    "comics",
    "magazines"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^30.2.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
